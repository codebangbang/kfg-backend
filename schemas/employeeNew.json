{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.employee.com/employeeNew.schema.json",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "email": {
      "type": "string"
    },
    "extension": {
      "type": "integer",
      "minimum": 0,
      "minLength": 1,
      "maxLength": 4
    },
    "ms_teams_link": {
      "type": "string",
      "format": "uri"
    },
    "department": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    }
  },
  "additionalProperties": false,
  "required": [
    "firstName",
    "lastName",
    "email"
  ]
}
