{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.employee.com/employeeNew.schema.json",
  "type": "object",
  "properties": {
    "employee_id": { 
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "firstname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "lastname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "extension": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9999
    },
    "ms_teams_link": {
      "type": "string",
      "format": "email"
    },
    "department": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "office_location": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    }

  },
  "additionalProperties": false,
  "required": [
    "firstname",
    "lastname",
    "email",
    "extension",
    "ms_teams_link",
    "department",
    "office_location"
  ]
}
